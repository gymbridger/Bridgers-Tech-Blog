<div class="add-post">
  <div class="add-post-container">
    <div class="user-post">
      <form class="new-post-form" action="/dashboard/new" method="POST">
        <h2 id="new-post-header">Add New Post</h2>
        <label id="new-post-title" for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="Title" required />

        <label id="new-post-content" for="content">Content:</label>
        <input id="content" name="content" placeholder="Type your message here..." required></input>

        <button id="new-post-submit" type="submit">Publish</button>
      </form>
    </div>
  </div>
</div>