<div class="dashboard">
  <div class="dashboard-container">
    <div class="user-dashboard">
      <h2 id="your-posts-header">Your Posts</h2>

      {{#each posts as |post|}}
        <div class="users-post">
          <h3 id="dashboard-title">{{post.title}}</h3>
          <p id="dashboard-post-content">{{post.content}}</p>
          <div id="dashboard-post-buttons">
            <a id="edit-post-button" href="/dashboard/edit/{{post.id}}">Edit</a>
            <button
              class="delete-post-button"
              data-id="{{this.id}}"
            >Delete</button>
          </div>
        </div>
      {{/each}}
      <a id="add-post-button" href="/dashboard/new">Add a New Post</a>
    </div>
  </div>
</div>

<script src="/deleteButton.js"></script>