<div class="signup">
  <div class="signup-container">
    <div class="user-signup">
      <form class="signup-form" action="/users/signup" method="post">
        <h2 id="signup-header">Sign Up</h2>
        <label id="signup-username" for="username">Username:</label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Username"
          required
        />

        <label id="signup-password" for="password">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          required
        />

        <button id="confirm-signup-button" type="submit">Sign Up</button>
      </form>
    </div>
  </div>
</div>